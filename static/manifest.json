{
  "name": "Saka Key",
  "version": "1.18.0",
  "author": "Sufyan Dawoodjee",
  "description": "A keyboard interface to the web",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "scripts": ["background_page.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script_loader.js"],
      "all_frames": true,
      "run_at": "document_start",
      "match_about_blank": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "logo.png"
    },
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
    },
  "permissions": [
    "tabs",
    "activeTab",
    "sessions",
    "storage",
    "unlimitedStorage",
    "<all_urls>",
    "clipboardRead"
  ],
  "web_accessible_resources": [
    "hello.js",
    "content_script.js",
    "help.js",
    "content_script.js.map",
    "background_page.js.map",
    "content_script_loader.js.map",
    "help.js.map",
    "options.js.map",
    "info.js.map",
    "help.html",
    "Roboto-Regular.tff",
    "startProfiles.json",
    "config_basic.json",
    "config_command.json",
    "config_developer.json",
    "config_hints.json",
    "default_basic.json",
    "default_command.json",
    "default_developer.json",
    "default_hints.json"
  ],
	"applications": {
    "gecko": {
      "id": "saka-key@lusakasa.org"
    }
  }
}
