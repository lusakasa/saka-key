    {
      "type": "checkbox",
      "label": "Smooth Scroll",
      "key": "smoothScroll",
      "default": true
    },
    {
      "type": "number",
      "label": "Scroll Step",
      "key": "scrollStep",
      "step": 1,
      "min": 1,
      "default": 16
